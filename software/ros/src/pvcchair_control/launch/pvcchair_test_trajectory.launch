<launch>

  <!-- GDB functionality -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <group ns="pvcchair">

    <!-- Load hardware interface -->
    <node name="test_trajectory" pkg="ros_control_boilerplate" type="test_trajectory"
          output="screen" launch-prefix="$(arg launch_prefix)">
      <param name="action_topic" value="/pvcchair/position_trajectory_controller/follow_joint_trajectory/"/>
      <rosparam file="$(find ros_control_boilerplate)/pvcchair_control/config/pvcchair_controllers.yaml" command="load"/>
    </node>

  </group>

</launch>
