<?xml version="1.0" ?>
<sdf version="1.5">
  <model name="pvc_powerchair">

    <!-- body -->
    <link name="body">
      <inertial>
        <mass>100</mass>
      </inertial>
      <visual name="vis_body">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
						<size>0.1 0.1 0.1</size>
            <!--<radius>0.8</radius>
            <length>0.02</length>-->
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
      <collision name="col_body">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
						<size>0.1 0.1 0.1</size>
          </box>
        </geometry>
      </collision>
    </link>

    <!-- left big wheel -->
    <link name="left_big_wheel">
      <pose>0 0.2 0 0 0 0</pose>
      <self_collide>0</self_collide>
      <inertial>
        <pose>0 0 0.5 0 0 0</pose>
      </inertial>

      <visual name="vis_left_big_wheel">
        <pose>0 0.2 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.01</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>

      <collision name="col_left_big_wheel">
        <pose>0 0.2 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.2</radius>
            <length>0.01</length>
          </cylinder>
        </geometry>
      </collision>
		</link>

    <!-- pin joint for body and wheels -->
    <joint name="upper_joint" type="revolute">
      <parent>body</parent>
      <child>left_big_wheel</child>
      <axis>
        <xyz>1.0 0 0</xyz>
        <use_parent_model_frame>true</use_parent_model_frame>
      </axis>
    </joint>

  </model>
</sdf>
